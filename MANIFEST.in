include README.md
include README.*.md
include LICENSE
include requirements.txt
include pyproject.toml
include MANIFEST.in

# Include all HTML templates
recursive-include proxyhunter/public *.html
recursive-include proxyhunter/public *.css
recursive-include proxyhunter/public *.js

# Include all test files
recursive-include tests *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__/
global-exclude .DS_Store
global-exclude *.so
global-exclude .git/
global-exclude .pytest_cache/ 